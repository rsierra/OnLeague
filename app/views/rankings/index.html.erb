<div id="rankings" class="row">
  <ul class="nav nav-list well span2 offset1">
    <li class="nav-header"><%= t '.select_ranking' %></li>
    <li <%= "class='active'" unless @week %>><%= link_to t('.seasonal'), rankings_path %></li>
    <li <%= "class='active'" if @week %>><%= link_to t('.weekly'), rankings_path(season: @current_league.season, week: @current_league.current_week) %></li>

  </ul>

  <div id="rankings-index" class="span5 offset1">

    <% if @rankings.blank? %>
    <div class="alert">
      <strong><%= t '.no_rankings' %></strong>
    </div>
    <% else %>

      <div>
        <%= paginate @rankings %>
      </div>

      <%= render partial: "teams", object: @rankings %>

    <% end %>
  </div>
</div>
