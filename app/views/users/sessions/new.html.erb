<h2><%= t '.sign_in' %></h2>

<div class="row">
  <div class="span4">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'well' }) do |f| %>
      <div><%= f.label :email %>
      <%= f.email_field :email %></div>

      <div><%= f.label :password %>
      <%= f.password_field :password %></div>

      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>

      <div><%= f.submit t('.sign_in'), :class => "btn btn-primary" %></div>
    <% end %>
  </div>
  <div class="span3 well">
    <div class="omniauth_providers">
      <h3><%= t '.sign_in_with' %></h3>
      <%- User.omniauth_providers.each do |provider| %>
      <%= provider_button provider %>
      <% end -%>
    </div>
  </div>
  <div class="span4">
    <%= render "users/shared/links" %>
  </div>
</div>
