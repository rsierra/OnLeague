<h2><%= t '.change_password' %></h2>

<div class="row">
  <div class="span8">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'well' }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div><%= f.label :password, t('.new_password') %><br />
      <%= f.password_field :password %></div>

      <div><%= f.label :password_confirmation, t('.confirm_new_password') %><br />
      <%= f.password_field :password_confirmation %></div>

      <div><%= f.submit t('.change_password'), :class => "btn btn-success" %></div>
    <% end %>
  </div>
  <div class="span4">
    <%= render "users/links" %>
  </div>
</div>

