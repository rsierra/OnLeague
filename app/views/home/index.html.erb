<div class="row">
  <div id="main_home" class="span12">
    <%= image_tag 'logo.png', :id => 'home_logo' %>
    <h1><%= t '.title'  %></h1>
    <p><%= t '.welcome' %></p>
  </div>
</div>

<div class="row">
  <div class="span4">
    <h2><%= t('.top_players') %></h2>
    <%= render partial: "shared/players_points", object: @top_players %>
  </div>
  <div class="span4">
    <h2><%= t('.top_teams') %></h2>
    <%= render partial: "top_teams", object: @top_teams %>
  </div>
  <div class="span4">
    <table class="table table-striped">
      <thead>
        <tr>
          <th></th>
          <th><%= User.model_name.human.pluralize %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.avatar_url %></td>
          <td><%= user.name %></td>
        </tr>
        <% end -%>
      </tbody>
    </table>
  </div>
</div>
