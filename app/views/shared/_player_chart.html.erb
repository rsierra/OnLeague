<% points_chart_id = "#{player_chart.class.name.underscore.dasherize}-#{player_chart.id}-points-chart" %>
<%= content_tag :div, "",
      id: points_chart_id,
      class: "player-chart",
      style: "width: 470px; height: 200px;",
      data: {
        points: player_chart.season_week_points_array_for_chart(@current_league),
        xlabel: League.human_attribute_name(:week),
        ylabels: [PlayerStat.human_attribute_name(:points), t('.average')]
      } %>
<script type="text/javascript">
  chartDrawer.drawChart('<%= points_chart_id %>');
</script>
