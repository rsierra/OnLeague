<%= search_form_for @search, :url => search_team_team_files_path(@team),
                        :html => {:method => :post} do |f| %>
  <%= f.label :player_name_cont, ClubFile.human_attribute_name(:player) %>
  <%= f.text_field :player_name_cont %>
  <%= f.label :value_gteq, t('.value_gteq') %>
  <%= f.text_field :value_gteq %>
  <%= f.label :value_lteq, t('.value_lteq') %>
  <%= f.text_field :value_lteq %>
  <%= f.label :club_id_eq, ClubFile.human_attribute_name(:club) %>
  <%= f.select :club_id_eq, options_for_select(current_league_select_options, :selected => @search.club_id_eq) %>
  <%= f.label :position_eq, ClubFile.human_attribute_name(:position) %>
  <%= f.select :position_eq, options_for_select(players_position_select_options, :selected => @search.position_eq) %>

  <%= f.submit %>
<% end %>
